<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:cardBackgroundColor="#000000"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clOptions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtvDate"
            app:layout_constraintVertical_bias="0.0">

            <com.devivan.economicsupervision.UtilityClasses.AutoResizeTextView
                android:id="@+id/txtvNewValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:padding="5dp"
                android:text="@string/new_debt"
                android:textAlignment="center"
                android:textColor="#cccccc"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/txtvShowValues"
                app:layout_constraintTop_toBottomOf="@+id/btnDeleteValues"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent="0.33" />

            <ImageView
                android:id="@+id/btnNewValue"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/box_with_round"
                android:padding="7dp"
                app:layout_constraintBottom_toBottomOf="@+id/btnDeleteValues"
                app:layout_constraintEnd_toEndOf="@+id/txtvNewValue"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/txtvNewValue"
                app:layout_constraintTop_toTopOf="@+id/btnDeleteValues"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/plus" />

            <com.devivan.economicsupervision.UtilityClasses.AutoResizeTextView
                android:id="@+id/txtvShowValues"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:padding="5dp"
                android:text="@string/have_payments"
                android:textAlignment="center"
                android:textColor="#cccccc"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/txtvDeleteValues"
                app:layout_constraintTop_toBottomOf="@+id/btnShowValues"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent="0.34" />

            <ImageView
                android:id="@+id/btnShowValues"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/box_with_round"
                android:padding="7dp"
                app:layout_constraintBottom_toBottomOf="@+id/btnDeleteValues"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnDeleteValues"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_visibility_50" />

            <com.devivan.economicsupervision.UtilityClasses.AutoResizeTextView
                android:id="@+id/txtvDeleteValues"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:padding="5dp"
                android:text="@string/delete_payment_credits"
                android:textAlignment="center"
                android:textColor="#cccccc"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnDeleteValues"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent="0.33" />

            <ImageView
                android:id="@+id/btnDeleteValues"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/box_with_round"
                android:padding="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/txtvDeleteValues"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/txtvDeleteValues"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/minus" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/btnShowOptions"
            android:layout_width="32dp"
            android:layout_height="0dp"
            android:padding="7dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtvDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cbPaid"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@drawable/ic_keyboard_arrow_down_50" />


        <com.devivan.economicsupervision.UtilityClasses.AutoResizeTextView
            android:id="@+id/txtvMoney"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:fontFamily="@font/minisystem"
            android:gravity="center"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:padding="5dp"
            android:text="12,65234238482934723424232349872389746237864y78234"
            android:textAlignment="textEnd"
            android:textColor="#cccccc"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/txtvDate"
            app:layout_constraintEnd_toEndOf="@+id/txtvValue"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtvDate"
            app:layout_constraintVertical_bias="1.0" />

        <com.devivan.economicsupervision.UtilityClasses.AutoResizeTextView
            android:id="@+id/txtvValue"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:fontFamily="@font/minisystem"
            android:gravity="center"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:padding="5dp"
            android:text="8,1443534534534423984872348237489234982374982374832"
            android:textAlignment="textEnd"
            android:textColor="@color/colorIncome"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/cbPaid"
            app:layout_constraintEnd_toStartOf="@+id/btnShowOptions"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cbPaid"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txtvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:maxLines="1"
            android:padding="5dp"
            android:text="Hace 82 dias4239847928374982374239847238423"
            android:textAlignment="textStart"
            android:textColor="#cccccc"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtvMoney"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/cbPaid"
            app:layout_constraintTop_toBottomOf="@+id/cbPaid"
            app:layout_constraintVertical_bias="0.0" />

        <CheckBox
            android:id="@+id/cbPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/white"
            android:checked="false"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtvValue"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/divider15"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/colorApp"
            app:layout_constraintBottom_toBottomOf="@+id/clOptions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cbPaid"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtvName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Josesfdhfsdkjfrhdskhfjkshjfhdskfhsdkjfhsdjfs"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/cbPaid"
            app:layout_constraintEnd_toStartOf="@+id/txtvValue"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cbPaid"
            app:layout_constraintTop_toTopOf="@+id/cbPaid"
            app:layout_constraintVertical_bias="0.384" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>